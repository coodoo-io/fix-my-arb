{
  "name": "fixmyarb",
  "displayName": "Fix my ARB",
  "description": "Automatically corrects syntax errors in ARB files",
  "version": "1.0.0",
  "publisher" : "Florian Schmitz",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters"
  ],
  "icon": "images/icon.png",
  "keywords" : [
    "arb",
    "flutter",
    "dart",
    "i18n",
    "translation"
  ],
  "activationEvents": [
    "onLanguage:arb"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.fixMyArb",
        "title": "Fix my ARB"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coodoo-io/fix-my-arb.git"
  },
  "bugs": {
    "url": "https://github.com/coodoo-io/fix-my-arb/issues"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}